/* pages/search/search.wxss */
.body {
  height: 100vh;
  background-color: rgb(240, 240, 240);
  font-family: arial,tahoma,宋体;
}
.body_header{
  width: 100%;
  height: 60rpx;
  background-color: white;
}
.header{
  margin: 20rpx auto 0rpx;
  width: 90%;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
}
.search {
  width: 85%;
  height: 60rpx;
  display: flex;
  background-color:whitesmoke;
  justify-content: space-around;
  border-collapse: collapse;
}
.search-container {
  width: 100%;
  display: flex;
  justify-content: left;
}
.input {
  display: flex;
  background-color:whitesmoke;
  height: 100%;
  width: 100%;
  color: gray;
  justify-content: start;
}
.search-before{
  display: block;
  width:36rpx;
  height:36rpx;
  margin: 14rpx 14rpx 10rpx 10rpx;
  }

.searchInput{
  height: 60rpx;
  width: 86%;
  line-height: 60rpx;
  font-size: 30rpx;
}


  .searchButton{
    font-family: arial,tahoma,宋体;
    line-height: 60rpx;
    height: 60rpx;
    color: orange;
    font-size: 32rpx;
    text-align:center;
  }
  view .rmSearch{
    width: 90%;
    padding-top: 40rpx;
    margin: 0rpx auto;
    height: 100%;
    font-size: 32rpx;
  }
  .rmContent{
    width: 100%;
    height: 100rpx;
    margin: 0rpx auto;
    background-color: white;
  }
  .contMain{
    width: 100%;
    background-color: white;
    padding-bottom: 100rpx;
  }
  .contBody {
    width: 90%;
    margin: 0 auto;
    display: flex;
    justify-content: start;
    flex-wrap: wrap;
    border-top: 1rpx solid grey;
  }

  .contBody view {
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0rpx 20rpx;
    margin: 20rpx 25rpx 0rpx 0rpx;
    border: 1px solid grey;
  }